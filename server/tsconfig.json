{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "Node",
      "outDir": "./dist",
      "rootDir": "./src",
      "esModuleInterop": true,
      "strict": false,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "noEmit": false,
      "forceConsistentCasingInFileNames": true,
      "types": ["node"],
      "typeRoots": [
        "./node_modules/@types",
        "./src/types"
      ],
      "baseUrl": "./",
      "paths": {
        "controller/*": ["src/controller/*"],
        "models/*": ["src/models/*"],
        "middleware/*": ["src/middleware/*"],
        "helpers/*": ["src/helpers/*"],
        "services/*": ["src/services/*"],
        "types/*": ["src/types/*"],
        "utils/*": ["src/utils/*"],
        "validator/*": ["src/validator/*"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }